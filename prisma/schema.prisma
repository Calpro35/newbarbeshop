generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String
  name      String
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Barbeshop {
  id          String             @id @default(uuid())
  email       String
  adress      String
  phones      String[]
  description String
  imageUrl    String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  services    BarbeshopService[]
}

model BarbeshopService {
  id          String    @id @default(uuid())
  name        String
  description String
  imageUrl    String
  price       Decimal   @db.Decimal(10, 2)
  barbeshopId String
  barbeshop   Barbeshop @relation(fields: [barbeshopId], references: [id])
  bookings    Booking[]
}

model Booking {
  id        String           @id @default(uuid())
  userId    String
  User      User             @relation(fields: [userId], references: [id])
  serviceId String
  service   BarbeshopService @relation(fields: [serviceId], references: [id])
  date      DateTime
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}
